 <!-- html code for home page of the project -->
<head>
    <style>
      .card {
        /* background-color: rgb(176, 223, 122); */
      }
    </style>
  </head>
  
  <body>
    <!-- Your HTML code here -->
    <div class="mb-5 p-5">
      <% for( let project of projects ) { %>
        <div class="card mb-2 w-50 m-auto">
          <div class="card-header">
            <strong> Name of the project : </strong>
            <!-- fetch the project name -->
            <%= project.name %>
          </div>
          <div class="card-body">
            <h6 class="card-subtitle mb-2 text-muted">
              <strong> Author : </strong>
                <!-- fetch the project details and display in it -->
              <%= project.author %>
            </h6>
            <p class="card-text">
              <strong> Description : </strong>
              <%= project.description %>
            </p>
  
            <div class="m-auto text-end">
              <a href="/project/<%=project._id%>" class="open-project-button btn btn-primary m-auto open-project-button">Open project</a>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </body>